<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/detail_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_title_height" >

        <ImageView
            android:id="@+id/detail_img1"
            android:layout_width="@dimen/register_return_width"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/register_title_margintop"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/detail_title_showmemotitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/title_margintop"
                android:text="备忘录标题"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/item_title_textsize" />
        </LinearLayout>

        <ImageView
            android:id="@+id/detail_img2"
            android:layout_width="@dimen/register_return_width"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="@dimen/register_title_margintop"
            android:src="@drawable/menu" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/detail_relative"
        android:background="#c8e7eb"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/detail_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:fadingEdge="none"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_edit_menu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/detail_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@android:color/black"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:text="修改"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/detail_detele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableBottom="@android:color/black"
            android:drawableTop="@android:color/black"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:text="删除"
            android:textSize="18dp" />
    </LinearLayout>

</RelativeLayout>